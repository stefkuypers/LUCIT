template(name="datepicker")
    .row
        .col-md-6
            h1 Pick a date
            h2 Define block size
            .form-group
                .input-group
                    .input.form-control(type="text")
                    .button.btn.btn-default.dropdown-toggle.btn-select2(data-toggle="dropdown") #{unit}
                    span.caret
                    ul.dropdown-menu
                        li
                            a(href="#") Minutes
                        li
                            a(href="#") Hours
                        li
                            a(href="#") Days
                        li
                            a(href="#") Weeks
                        li
                            a(href="#") Months
                        li
                            a(href="#") Years
        .col-md-2
            ul.nav.nav-pills.nav-stacked
                li
                    a(href="{{pathFor 'home'}}") Home
                li
                    a(href="{{pathFor 'groups'}}") Groups
                li
                    a(href="{{pathFor 'datepicker'}}") Date picker